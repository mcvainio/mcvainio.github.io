<head>
<title>Your Page Title Here</title>
<link rel="icon" href="https://imgur.com/2tWGqen.png">

<!-- importing plugins -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.8.0-beta.1/leaflet.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/esri-leaflet/3.0.7/esri-leaflet.js"></script>

<!-- stylesheets & icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.5.1/leaflet.css">



<style>
//setting the map container to full-screen
html, body {
  height: 100%;
  margin: 0;
}
#mapid { height: 100%; width: 100%; }

</style>
</head>


<body>
<div id="mapid" class="sidebar-map"></div>


<script>
//this is where we initialize our map with its starting attributes
var map = L.map('mapid')
//setting the start view to the maritimes cause idk, gotta start somewhere
map.setView([45, -60], 5);
//the last attribute here is the zoom level to start out with. Higher is closer. 5 is around province-sized. 10-13 is around city-sized.

//basemap layers to add to layer control menu
var basemaps = {
    GEBCO: L.tileLayer.wms('https://www.gebco.net/data_and_products/gebco_web_services/web_map_service/mapserv?', {
        layers: 'GEBCO_Latest'
    }),
    'Nav Charts': L.esri.tiledMapLayer({
      url: 'https://services.arcgisonline.com/ArcGIS/rest/services/Specialty/World_Navigation_Charts/MapServer'
    }),
    'Ocean Basemap (ESRI)': L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/Ocean_Basemap/MapServer/tile/{z}/{y}/{x}', {
    }),
};

//overlay layers for the control menu too if you want them
var overlaymaps = {
    'NONNA-100': L.tileLayer.wms('https://data.chs-shc.ca/geoserver/ows?', {
        layers: 'caris:NONNA 100 Tiles',
	format: 'image/png',
	transparent: true
    }),
    'IHO Combined Mosaic': L.esri.imageMapLayer({
      url: 'https://gis.ngdc.noaa.gov/arcgis/rest/services/multibeam_mosaic/ImageServer',
    }),
    'GEBContours': L.tileLayer('https://tiles.arcgis.com/tiles/C8EMgrsFcRFL6LrL/arcgis/rest/services/GEBCO_contours/MapServer/tile/{z}/{y}/{x}', {
    }),
};

//add layer control bar & scalebar, then specify default layers
L.control.layers(basemaps, overlaymaps).addTo(map);
L.control.scale().addTo(map)
basemaps.GEBCO.addTo(map);
overlaymaps.GEBContours.addTo(map);


//adding some markers 
var marker1 = L.marker([45, -50]).addTo(map);
marker1.bindPopup("<b>Population Count:</b><br>-17 turtles<br>-4 sea lions<br>-a whale")

var MyCustomMarker = L.Icon.extend({
  options: {
    shadowUrl: null,
    iconAnchor: new L.Point(42, -45),
    iconSize: new L.Point(50, 50),
    iconUrl: 'https://cdn-icons-png.flaticon.com/512/1604/1604059.png',
	}
})
L.marker([42, -45], {icon:new MyCustomMarker()}).addTo(map).bindPopup("I am a custom icon!")

</script>

</body>
</html>
